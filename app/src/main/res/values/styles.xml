<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Application theme. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="titleTextColor">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/primary_dark</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="Display1">
        <item name="android:textColor">@color/default_color_text</item>
        <item name="android:textSize">34sp</item>
    </style>

    <style name="HeaderFont">
        <item name="android:textColor">@color/default_color_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SubHeader">
        <item name="android:textColor">@color/default_color_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SubHeaderColor">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LinkStyle">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle"></item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="HeaderColorFont">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlainStyle">
        <item name="android:textColor">@color/default_color_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="fillColor">#FFFFFF</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
        <item name="android:padding">10dip</item>
    </style>

</resources>
